{
  "name": "snake-game-engine",
  "description": "A versatile and framework-agnostic Snake game engine that supports both single-player and multiplayer modes. Built with TypeScript, it provides a flexible core that can be integrated into any rendering context.",
  "author": "Luca Brognara",
  "license": "ISC",
  "private": false,
  "version": "1.2.0",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "snake",
    "game-engine",
    "multiplayer",
    "typescript",
    "game-development",
    "framework-agnostic",
    "renderer-agnostic",
    "game-loop",
    "collision-detection",
    "websocket"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lucabro81/snake-game-engine"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc && vite build",
    "build:dev": "KEEP_SOURCE_MAP=true pnpm build",
    "publish:dry-run": "pnpm build && pnpm publish --dry-run",
    "publish:prod": "pnpm build && pnpm publish"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/ws": "^8.5.13",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "ws": "^8.18.0"
  }
}
